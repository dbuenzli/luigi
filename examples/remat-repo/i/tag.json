{
  "name":
  { "en": { "text": "By tags", "href": "tag" },
    "fr": { "text": "Par marques", "href": "marque" },
    "de": { "text": "Nach Etikett", "href": "Etikett" }},

  "doc_vars":
  { "tag": ["tags"],
    "title": ["title"],
    "title_prefix": ["title_prefix"],
    "date": ["date"]},

  "key": { "*": "$(tag)-$(title)-$(title_prefix)-$(date)" },
  "headings": { "*": [{ "label": "$(tag)", "toc": "all" }]},
  "doc_ref":
  { "*": { "descr": "$(tag)$(title_prefix) $(title), $(date)",
           "doc_type": true, "doc_count": true }}
}

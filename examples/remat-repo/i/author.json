{
  "name":
  { "en": { "text": "By authors", "href": "author" },
    "fr": { "text": "Par auteur", "href": "auteur" },
    "de": { "text": "Nach Autor", "href": "autor" }},

  "doc_vars":
  { "author": ["authors"],
    "title": ["title"],
    "title_prefix": ["title_prefix"],
    "date": ["date"] }

  "key": { "*": "$(author)-$(title)-$(title_prefix)-$(date)" },
  "headings": { "*": [{ "label": "$(author,letter_1)", "toc": "all"}]},
  "doc_ref":
  { "*": { "descr": "$(author) $(title_prefix)$(title), $(date)",
           "doc_type": true,
           "doc_count": true }}
}
